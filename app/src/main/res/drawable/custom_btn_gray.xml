<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" >
    <shape android:shape="rectangle">
        <solid
            android:color="@color/btngray" />
        <stroke
            android:width="5dp"
            android:color="@color/btngray"
            android:dashWidth="3dp"
            android:dashGap="2dp" />
    </shape>
</item>

<item android:state_focused="true" >
    <shape>
        <gradient
            android:endColor="@color/btngray"
            android:centerColor="@color/btngray"
            android:startColor="@color/btngray"
            android:angle="270" />
        <stroke
            android:width="3dp"
            android:color="@color/btngray" />
        <corners
            android:radius="5dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>

<item>        
    <shape>
        <gradient
            android:endColor="@color/btngray"
            android:centerColor="@color/btngray"
            android:startColor="@color/btngray"
            android:angle="270" />
        <stroke
            android:width="5dp"
            android:color="@color/btngray" />
        <corners
            android:radius="5dp" />
    </shape>
</item>
</selector>
