<resources>
    <!-- Toolbars1 -->
    <style name="Base.Theme.Test1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_menu</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Toolbars -->
    <style name="Base.Theme.Test" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_menu</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Theme for menu Activity (transparent Statusbar)-->
    <style name="Base.Theme.Toolbar.TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorControlNormal">#c5c5c5</item>
    </style>

    <!-- Theme for Time_Picker Activity (transparent Statusbar)-->
    <style name="TimePicker" parent="Base.Theme.Toolbar.TransparentStatusBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorControlNormal">#c5c5c5</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">

        <item name="android:fullDark">@color/background</item>
    </style>

    <!-- Main theme -->
    <style name="Base.Theme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="mcab_contentinset_start">60dp</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Navigation Drawer Text Sytle -->
    <style name="NavigationViewTheme" parent="Theme.AppCompat">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Normal app Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- About -->
    <style name="Toolbar2" parent="Theme.AppCompat.Light.NoActionBar">                                  <!-- MaterialLight: Theme.Material.Light.DarkActionBar | MaterialDark: Theme.Material -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:divider">@null</item>
        <item name="android:listDivider">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Main Activity - Overflow Menu -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="popupNew" parent="Platform.ThemeOverlay.AppCompat.Dark" />

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/background</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>